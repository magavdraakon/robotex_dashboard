<h1>Robotex progress dashboard</h1>

  <p><%= link_to "Robots", robots_path %></p>
  <p><%= link_to "Tasks", tasks_path %></p>

  <% week_list=[] %>
  <% @all_weeks.each do |s| %>
  <% week_list << s.week_no %>
  <% end %>

  <p>Hetkel on valitud nädal - <%= @week_n %> </p>
  <p>Vali nädal
<% form_tag(:action=>'index') do %>
   <%= select(:n2dal,:week_no, week_list, {:prompt=>'Choose week ...'} )%>
   <%= submit_tag('Go')%>
<% end %>
</p>

<table>
<tr>
  <th>Task</th>
    <% @robots.each do |robot| %>
      <th><%= robot.name %></th>
    <% end %>
</tr>


<% 
first=[]
second=[]
third=[]
@states.each do |state| 
  if state.robot_id==1
    first[state.task_id]=state
    end
  if state.robot_id==2
    second[state.task_id]=state
  end
  if  state.robot_id==3
    third[state.task_id]=state
  end
end%>
<%i=0%>
<% @tasks.each do |task| %>
<tr>
<td><%=i=task.id%>. <%= task.name -%></td>
<td><%=first[i].progress if first[i]!=nil%></td>
<td><%=second[i].progress if second[i]!=nil%></td>
<td><%=third[i].progress if third[i]!=nil%></td>
</tr>
<% end %>
</table>

    
